modules = ["rust", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["pkg-config", "glib", "gtk3", "webkitgtk", "openssl"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Privacy Browser"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Browser Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Privacy Browser Native"

[[workflows.workflow]]
name = "Privacy Browser"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src-tauri && cargo tauri dev --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Browser Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Privacy Browser Native"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src-tauri && cargo run --release"

[[ports]]
localPort = 5000
externalPort = 80
